<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40dp"
    android:layout_height="80dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">
    <TextView
        android:id="@+id/hour_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="02:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/primary_text_disabled_material_light"/>
    <ImageView
        android:id="@+id/hour_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hour_weather"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_clear"/>
    <TextView
        android:id="@+id/hour_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hour_weather_icon"
        android:text="-4"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/primary_text_disabled_material_light"/>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.argonmobile.weather.DetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/weather_banner"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/weather_banner"/>

    <TextView
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/weather_banner"
        android:text="Nanjing"
        android:textColor="@color/primary_text_default_material_dark"
        android:fontFamily="sans-serif-light"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"/>

    <RelativeLayout
        android:id="@+id/main_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_banner">

        <ImageView
            android:id="@+id/current_weather_icon"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_clear"/>
        <TextView
            android:id="@+id/current_weather_condition"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/current_weather_icon"
            android:layout_alignTop="@+id/current_weather_icon"
            android:text="Thunder Storm"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_weather_icon"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:gravity="center"
            android:text="22&#xb0;"
            android:textColor="@color/primary_text_default_material_light"
            android:fontFamily="sans-serif-thin"/>
        <TextView
            android:id="@+id/temp_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignRight="@+id/current_temp"
            android:layout_alignBottom="@+id/current_temp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/primary_text_default_material_light"
            android:fontFamily="sans-serif-thin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/temp_container"
            android:paddingRight="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="right|center_vertical"
            android:text="Wen 19:08"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/primary_text_disabled_material_light"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main_condition"
        android:background="@color/divider"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/weather_banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/weather_banner"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@+id/weather_banner"
            android:layout_gravity="bottom"
            android:text="Nanjing"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/weather_banner"
            android:layout_alignParentLeft="true"
            android:src="@drawable/art_clear"/>

        <RelativeLayout
            android:id="@+id/temp_container"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/weather_banner"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/weather_icon">
            <TextView
                android:id="@+id/current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:gravity="center"
                android:text="22&#xb0;"
                android:textColor="@color/primary_text_default_material_light"
                android:fontFamily="sans-serif-thin"/>
            <TextView
                android:id="@+id/temp_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignRight="@+id/current_temp"
                android:layout_alignBottom="@+id/current_temp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/primary_text_default_material_light"
                android:fontFamily="sans-serif-thin"/>
            <TextView
                android:id="@+id/current_high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/current_temp"
                android:layout_toRightOf="@+id/current_temp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:padding="8dp"
                android:gravity="center"
                android:text="&#x2191;26&#xb0;"
                android:textColor="@color/secondary_text_default_material_light"/>
            <TextView
                android:id="@+id/current_low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/current_temp"
                android:layout_toRightOf="@+id/current_temp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:padding="8dp"
                android:gravity="center"
                android:text="&#x2193;18&#xb0;"
                android:textColor="@color/secondary_text_default_material_light"/>
        </RelativeLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:layout_below="@+id/weather_icon"-->
            <!--android:background="#4000"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/temp_container"
            android:paddingRight="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="right|center_vertical"
            android:text="Wen 19:08"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/primary_text_disabled_material_light"/>
    </RelativeLayout>
</android.support.v7.widget.CardView >